def separate_by_interval(word, interval):
  word_list = []
  if interval > 0:
    for Counter in range(0,len(word),interval):
      string = word[Counter:Counter+interval]
      word_list.append(string)
    return word_list      
  else:
    return word

print(separate_by_interval("togoordo", 2))
print(separate_by_interval("greatgoalstoday", 5))
print(separate_by_interval("yahoooooo", 0))
